<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beginner.micromaster.contactlist.DetailActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/contact"
        android:id="@+id/imageView" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/imageView"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="contact_name"
        />

    <TextView
        android:id="@+id/contact_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_name"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="contact_lastname"
        />

    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="32dp"
        android:text="@string/hint_email"
        android:textColor="@color/colorLightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPhoneNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvEmailLabel"
        android:layout_marginTop="32dp"
        android:text="@string/hint_phone_number"
        android:textColor="@color/colorLightBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPhoneNumberLabel"
        android:layout_alignStart="@+id/contact_lastname"
        android:text="contact_email" />

    <TextView
        android:id="@+id/contact_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPhoneNumberLabel"
        android:layout_alignBottom="@+id/tvPhoneNumberLabel"
        android:layout_alignStart="@+id/contact_email"
        android:text="contact_phoneNumber" />


</RelativeLayout>
